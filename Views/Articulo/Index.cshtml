@model IEnumerable<TrabajoPracticoFinal.Models.ArticuloDto>

<h1>Lista de Artículos</h1>
<a href="@Url.Action("Create", "Articulo")" class="btn btn-success mb-3">Agregar Nuevo Artículo</a>  <!-- Botón con color verde para agregar -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var articulo in Model)
        {
            <tr>
                <td>@articulo.Id</td>
                <td>@articulo.Descripcion</td>
                <td>@articulo.Precio.ToString("C")</td>  <!-- Muestra el precio en formato de moneda -->
                <td>
                    <a href="@Url.Action("Edit", "Articulo", new { id = articulo.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", "Articulo", new { id = articulo.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
