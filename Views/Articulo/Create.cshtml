@model TrabajoPracticoFinal.Models.ArticuloDto

<h1>Crear Artículo</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control" placeholder="Ingrese el precio" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Index", "Articulo")" class="btn btn-secondary">Cancelar</a>
</form>
