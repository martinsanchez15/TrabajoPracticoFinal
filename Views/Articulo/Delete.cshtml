@model TrabajoPracticoFinal.Models.ArticuloDto

<h1>¿Estás seguro de que deseas eliminar el artículo?</h1>

<div>
    <h4>@Model.Descripcion</h4>
    <p>Precio: @Model.Precio.ToString("C")</p>  <!-- Muestra el precio con formato de moneda -->
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Articulo")" class="btn btn-secondary">Cancelar</a>
</form>
